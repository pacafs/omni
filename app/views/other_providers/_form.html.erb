<%= form_tag "/other_providers/create", :id => "myform" do %>
  
  <div class="field form-group">
    <%= text_field_tag :email, nil, class: 'form-control', :size => "50", :value => @auth['info']['email'] %>
  </div>

  <div class="field form-group">
    <%= password_field_tag :password, nil, class: 'form-control', :size => "50" %>
  </div>

  <div class="actions form-group">
    <%= submit_tag 'Sign Up', class: 'btn btn-info'  %>
  </div>

<% end %>